{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2023",
    "moduleResolution": "node",

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,

    "allowJs": true,
    "checkJs": true,

    "outDir": "./dist",
    "ignoreDeprecations": "6.0",

    "types": ["node"],
    "lib": ["ESNext"]
  },
  "include": ["src/**/*.ts", "prisma/**/*", "lib/**/*", "prisma/script/**/*", "test-db.ts"],
  "exclude": ["node_modules"]
}
